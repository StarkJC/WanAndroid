<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_register"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="gone">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_register_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.sjc.wanandroid.view.ClearEditText
            android:id="@+id/et_register_username"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/ic_launcher"
            android:hint="账号"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:paddingEnd="10dp"
            android:text="15539630636"
            android:textSize="17sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_register_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true">

        <com.sjc.wanandroid.view.ClearEditText
            android:id="@+id/et_register_pwd"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingEnd="10dp"
            android:text=""
            android:textSize="17sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_register_affirmpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:passwordToggleEnabled="true">

        <com.sjc.wanandroid.view.ClearEditText
            android:id="@+id/et_register_affirmpwd"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:paddingEnd="10dp"
            android:text=""
            android:textSize="17sp" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>